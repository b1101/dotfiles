alias -g emerge='sudo emerge'
alias -g emaint='sudo emaint'
alias -g euse='sudo euse'
alias -g equery='sudo equery'
alias -g eix-sync='sudo eix-sync'
alias    em='emerge -av --quiet-build y'
alias    eM='emerge -vq --quiet-build y'
alias    e1='emerge -1qv'
alias    ew='emerge -avuDN --quiet-build y @world'
alias    eW='emerge -vuDNq @world'
alias    ey='emaint sync -A && eix-sync && emerge -avuDN --quiet-build @world'
alias    eY='emaint sync -A && eix-sync && emerge -vuDNq @world'
# vim: ft=zsh
