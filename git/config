# vim: ft=gitconfig
[push]
	default = simple
[status]
	short = true
    branch = true
	submoduleSummary = true
    showUntrackedFiles = all
[color]
    ui = true
[diff]
	renames = copy
[branch]
    autosetuprebase = always
[core]
    autocrlf = false
    safecrlf = false
	editor = nvim
	excludesfile = ~/.config/git/gitignore
[alias]
       a = apply --index
       p = format-patch --stdout
      co = checkout
      ci = commit
      cp = cherry-pick
      me = merge
      re = rebase 
      br = branch 
      su = submodule
      rr = reset 
    tree = log --graph --pretty=format:'%C(auto)%h - %s [%an] (%C(blue)%ar)%C(auto)%d'
 bigtree = log --graph --decorate --pretty=format:'%C(auto)%d%n%h %s%+b%n(%G?) %an <%ae> (%C(blue)%ad%C(auto))%n'
    hist = log --date=short --pretty=format:'%C(auto)%ad %h (%G?) %s [%an] %d'
  xclean = clean -xdf -e .envrc -e .direnv.* -e shell.nix -e default.nix -e vendor -e .vscode
[merge]
	tool = nvimdiff
    conflictstyle = diff3
[diff]
	tool = codediff
[mergetool]
	path = /usr/bin/nvim
    keepBackup = false
[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "codediff"]
    cmd = code --wait --diff $LOCAL $REMOTE
[commit]
	gpgsign = true
[format]
	pretty = %C(auto)%h - %s%d%n%+b%+N(%G?) %an <%ae> (%C(blue)%ad%C(auto))%n
[http]
	cookieFile = ~/.gitcookies
[user]
	name = Roman Volosatovs
	email = rvolosatovs@riseup.net
	signingkey = 3D80C89E
;[url "git@github.com:"]
	;insteadOf = https://github.com/
[http "https://gopkg.in"]
	followRedirects = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rerere]
	enabled = true
